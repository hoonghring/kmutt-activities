<form class="ui form" action="/articles/add" enctype="multipart/form-data" method="POST">
  <div class="container">
    <form>
      <div class="form-group">
        <label>Title :</label>
        <input type="text" name="title" required class="form-control">
      </div>
      <div class="form-group">
        <label>Type :</label>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="type" id="inlineRadio1" value="University">
          <label class="form-check-label" for="inlineRadio1">University</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="type" id="inlineRadio2" value="Club">
          <label class="form-check-label" for="inlineRadio2">Club</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="type" id="inlineRadio3" value="Other">
          <label class="form-check-label" for="inlineRadio3">Other</label>
        </div>
      </div>
      <div class="form-group">
        <label>By :</label>
        <input type="text" name="by" required class="form-control">
      </div>
      <div class="form-group">
        <label>Hour :</label>
        <input type="text" name="hours" required class="form-control">
      </div>
      <div class="form-group">
        <label>Number of student :</label>
        <input type="text" name="numofstd" required class="form-control">
      </div>
      <div class="form-group">
        <label for="exampleFormControlFile1">Activity banner :</label>
        <input type="file" name="image" class="form-control-file" id="exampleFormControlFile1">
      </div>
